<body>
    <h1 class="heading2">To delete a book, click on the red <span>X</span> button</h1><br>
    <div class="image1">
        <table>
            <% let i=0 %>
            <% data.forEach(data =>{ %>
            <form action="<%= `booknum/${data.name}/delete?_method=DELETE` %>" method="POST">
            <% i++ %>
                <tr>
                    <td>
                        <button class="but" type="submit" 
                        onclick="return confirm('Are you sure you want to delete this book?')">&#10060;
                        </button>&ensp;<%= data.name %><br>
                    </td>
                </tr><br>
            </form>
            <% }); %>
        </table><br>
    </div><br>
